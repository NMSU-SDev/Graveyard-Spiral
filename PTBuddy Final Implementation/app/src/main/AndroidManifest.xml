<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shane.myapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        tools:replace="android:label"
        android:allowBackup="true"
        android:icon="@mipmap/pt_icon"
        android:label="@string/pt_buddy_icon_name"
        android:roundIcon="@mipmap/pt_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Start"
            android:label="@string/pt_buddy_icon_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".UserInput" />
        <activity android:name=".LeftArmZoom" />
        <activity android:name=".RightArmZoom" />
        <activity android:name=".LegsZoom" />
        <activity android:name=".TorsoZoom" />
        <activity android:name=".PTBuddy" />
        <activity android:name=".smiley" />
        <activity android:name=".YTPlayerArms" />
        <activity android:name=".YTPlayerLegs" />
        <activity android:name=".YTPlayerTorso" />
    </application>

</manifest>